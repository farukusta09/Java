import java.util.Scanner;
public class Mavenproject2 {

    public static void main(String[] args) {
        
        Scanner scan = new Scanner(System.in);
        
        System.out.println("rakamlarının toplamını bulmak istediğiniz sayıyı giriniz...");
    
        int sayi =scan.nextInt();
        int toplam = 0;
        int a=sayi;
        do{
        
        toplam += sayi % 10;
        sayi/=10;
        
        
        }while(sayi>0);
    
    System.out.println(a+" sayısının rakamları toplamı= "+toplam);
    
    }
}
